html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		meta(name='id' content=id)

		title Products

		link(rel='stylesheet' href='/css/bootstrap.min.css')

	body
		h2=id
		table(class='table table-bordered table-hover')
			thead(class="thead-dark")
				tr
					th(class='text-center') Item
					th(class='text-center') Cost
					th(class='text-center') Price
					th(class='text-center') Margin
					th(class='text-center') Markup
					th(class='text-center') Quantity
					th(class='text-center') Total Value
			tbody

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		script(src="../scripts/productPage.js")