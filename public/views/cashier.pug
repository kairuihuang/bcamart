html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		title Cashier screen
		link(rel='stylesheet' href='/css/bootstrap.min.css')
		link(rel='stylesheet' type='text/css' href='../stylesheets/cashier.css')
	
	body
		div(class='container')
			div(class='row')
				div(class='col')
					table(class='table table-striped' id='cart')
						thead(class='thead-dark')
							tr
								th(class='text-left') Item
								th(class='text-right') Price
								th(class='text-right') Quantity
								th(class='text-right') Subtotal
						tbody(id='cartBody')
				div(class='col')
					div(class='input-group input-group-lg')
						div(class='input-group-prepend')
							span(class='input-group-text') Total
						input(type='text' class='form-control form-control-lg' 
						      id='total' value='0.00' disabled)
						div(class='input-group-append')
							button(class='btn btn-warning btn-lg' id='cashBtn'
							       type='button') Cash
			div(class='row')
				div(class='col' id='pGroup')
		
		
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		script(src="../scripts/cashier.js")
