html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1')

		title Point-of-sale screen
		link(rel='stylesheet' href='/css/bootstrap.min.css')
		link(rel='stylesheet' type='text/css' href='../stylesheets/cashier.css')
	
	body
		div(class='container-fluid')
			nav(class='navbar navbar-dark bg-secondary')
				span(class='navbar-brand') BCA Mart Point of Sale
				button(class='button btn btn-outline-warning') Logout
			div(class='row')
				div(class='col-7 prodTableDiv')
					table(class='table table-striped' id='cart')
						thead(class='thead-dark')
							tr
								th(class='text-left') Item
								th(class='text-right') Price
								th(class='text-right') Quantity
								th(class='text-right') Subtotal
								th(class='text-center') Subtract
								th(class='text-center') Remove
						tbody(id='cartBody')
				div(class='col register')
					div(class='input-group input-group-lg')
						div(class='input-group-prepend')
							span(class='input-group-text') Subtotal
						input(type='text' class='form-control form-control-lg' id='subtotal' value='0.00' disabled)
					div(class='input-group input-group-lg')
						div(class='input-group-prepend')
							span(class='input-group-text') Discount
						input(type='text' class='form-control form-control-lg' id='discount' value='0.00' disabled)
					div(class='input-group input-group-lg')
						div(class='input-group-prepend')
							span(class='input-group-text') Total
						input(type='text' class='form-control form-control-lg' id='total' value='0.00' disabled)
					div(class='btn-group btn-group-lg')
						button(type='button' class='btn btn-primary' id='clockBtn' data-toggle="modal") Hours
						button(type='button' class='btn btn-info' id='discountBtn') Discount
						button(type='button' class='btn btn-danger' id='clearBtn') Clear
						button(type='button' class='btn btn-warning' id='cashBtn') Cash
			div(class='row')
				div(class='col' id='pGroup')
		
		// toast appears when transaction is submitted
		div(class='toast' id='transactionToast' data-delay='3000')
			div(class='toast-header')
				strong(class='mr-auto') Alert
				small now
			div(class='toast-body') Transaction has been processed
		
		// modals
		div(class='modal' id='clockModal' role='dialog')
			div(class='modal-dialog' role='document')
				div(class='modal-content')
					div(class='modal-header')
						h4(class='modal-title') Volunteer Hours 
						button(type='button' class='close' data-dismiss='modal')
					div(class='modal-body')
						form
							div(class='form-group')
								label(for='code' class='col-form-label') Enter code:
								input(type='text' class='form-control' id='volunteerInput' name='code')
					div(class='modal-footer')
						button(type='submit' form='volunteerInput' class='btn btn-success btn-large' id='clockInBtn') Clock in
						button(type='submit' form='volunteerInput' class='btn btn-info btn-large' id='clockOutBtn') Clock out
						button(type='button' class='btn btn-secondary btn-large' id='closeClockModal') Close
		
		
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		script(src="../scripts/cashier.js")
